<% layout('./layouts/boilerPlate') %>
     <h1 class="text-center">Log In</h1>
<div class="col-6 offset-3">
        <form class="needs-validation" action="/login" method="post" novalidate> 
        <div class="mb-3">
            <label class="fw-bold" for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="username" required>
            <div class="invalid-feedback">
                Name cannot be empty
            </div>
            <!--   -->
        </div>
        <div class="mb-3">
            <label class="fw-bold" for="password" class="form-label">Password</label>
            <div class="input-group flex-nowrap">
                 <input type="password" class="form-control" id="password" name="password" min="8" required>
                 
            <span class="input-group-text" id="addon-wrapping">
                <a onclick="showPass()" id="view" href="#"><svg  xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                </svg>
                </a>
            </span>
            </div>
            <!-- <div class="valid-feedback">
                Looks Good
            </div> -->
            <div class="invalid-feedback">
                Password cannot be empty
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
 </div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>
    function showPass()
    {
        const pass = document.querySelector('#password')
        const passwordValue = pass.value
        pass.toggleAttribute('type')
       // console.dir(pass)
    }
    
</script>