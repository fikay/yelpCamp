<% layout('./layouts/boilerPlate') %>
<link rel="stylesheet" href="/stylesheets/hompage.css">
<script>
    const  mapToken = "<%-process.env.MAPBOX_TOKEN%>";
    const camps ={features:<%-JSON.stringify(campgrounds)%> } 
</script>
<div id="map" style="height: 500px; width: 100%;margin-top: 0px;"></div>
<div class="row ">
    <div class="col-8 offset-2">     
        <h1>All Campgrounds</h1>
    <a href="/campground/new">New Camp</a>
    
        <% for( let camp of campgrounds ) { %>
            <div class="card border border-black mb-3 " >
                <div id="container" class=" row" style="height: 10rem;">
                    <div class="col-sm-4 col-md-4 "style="height: 160px;">
                         <img class=" h-100 img-fluid" src="<%=camp.Images[0].url%>">
                    </div>
                    <div class="col-sm-4 col-md-4 ">
                           <h5 class="card-title text-end text-white me-3"><%= camp.Name %></h5>
                            <p class="card-text text-end text-white me-3"><%= camp.Description %></p>
                    </div>
                    <div id ="box" class=" col-sm-4 col-md-4 d-flex align-items-center justify-content-end ">
                        <a  href="/campground/<%= camp._id %>" class="btn btn-primary m">Camp Details</a>
                    </div>
                </div>

            </div>
        <% } %>
   
    </div>

</div>
<style>
    img{
        overflow-x: hidden;
    }
</style>

<script src="/javascripts/clusterMap.js"></script>